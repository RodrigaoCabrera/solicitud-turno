---
const icons: any = import.meta.glob("../icons/*.astro");
const { iconPath } = Astro.props;

let Component;
if (icons[`../icons/${iconPath}.astro`]) {
  Component = (await icons[`../icons/${iconPath}.astro`]()).default;
} else {
  throw new Error(`Icon not found: ${iconPath}`);
}
---

<Component width="15" height="15" viewBox="0 0 15 15" fill="none" />
