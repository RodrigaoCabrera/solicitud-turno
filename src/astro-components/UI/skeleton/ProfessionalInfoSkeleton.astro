---
import Item from "../Item.astro";
import Typography from "../Typography.astro";
import Location from "@/astro-components/icons/Location.astro";
import Email from "@/astro-components/icons/Email.astro";
import Phone from "@/astro-components/icons/Phone.astro";
---

<article
  class="relative flex flex-col gap-y-5 px-4 pt-32 pb-6 mt-14 bg-gray-100 rounded-lg"
>
  <div
    class="profile-image-skeleton w-[166px] h-[166px] rounded-full bg-gray-300 left-[50%] translate-x-[-50%] my-4 absolute -top-16"
  >
  </div>

  <section class="about-me-skeleton">
    <Typography as="h1" variant="sm" color="darkText" class="mb-1">
      Sobre mí
    </Typography>
    <div class="skeleton-text bg-gray-300 h-[15px] mb-1 rounded"></div>
    <div class="skeleton-text bg-gray-300 h-[15px] mb-1 rounded"></div>
    <div class="skeleton-text bg-gray-300 h-[15px] mb-1 rounded"></div>
    <div class="skeleton-text bg-gray-300 h-[15px] rounded w-3/5"></div>
  </section>

  <section class="schedules-skeleton">
    <Typography as="h2" variant="sm" color="darkText" class="mb-1">
      Horarios de atención
    </Typography>
    <div class="skeleton-text bg-gray-300 h-5 rounded"></div>
  </section>

  <section class="contact-info-skeleton">
    <Typography as="h1" variant="sm" color="darkText" class="mb-1">
      Contacto
    </Typography>
    <Item>
      <Location
        width="15"
        height="15"
        fill="none"
        viewBox="0 0 15 15"
        slot="before-text"
      />
      <div class="skeleton-text bg-gray-300 h-5 mb-1 rounded w-4/5"></div>
    </Item>
    <Item>
      <Email
        width="15"
        height="15"
        fill="none"
        viewBox="0 0 15 15"
        slot="before-text"
      />
      <div class="skeleton-text bg-gray-300 h-5 mb-1 rounded w-3/5"></div>
    </Item>
    <Item>
      <Phone
        width="15"
        height="15"
        fill="none"
        viewBox="0 0 15 15"
        slot="before-text"
      />
      <div class="skeleton-text bg-gray-300 h-5 rounded w-2/5"></div>
    </Item>
  </section>
</article>

<style>
  .skeleton-text,
  .profile-image-skeleton {
    background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
    background-size: 200% 100%;
    animation: var(--loading-animation);
  }
</style>
